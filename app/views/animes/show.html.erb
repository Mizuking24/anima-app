<h3>詳細画面</h3>
<div class="post-body">
  <%= attachment_image_tag @anime, :image, :fill, 500, 500, fallback: "142_refileDownloadImage.png" %>
  <p>タイトル：<%= @anime.title %></p>
  <!--星評価-->
   <div id="star-rate-<%= @anime.id %>"></div>
    <script>
    $('#star-rate-<%= @anime.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
      score: <%= @anime.rate %>,
    });
    </script>
  <!--/星評価-->
  <p>感想：<%= @anime.body %></p>
  <p>ユーザーネーム：<%=link_to @anime.user.name, user_path(@anime.user) %></p>
  <p>投稿日時：<%= @anime.created_at.strftime('%Y/%m/%d') %></p>
  <% if @anime.user == current_user %>
    <%= link_to "編集", edit_anime_path(@anime) %>
    <%= link_to "削除", anime_path(@anime), method: :delete %>
  <% end %>
  <% if @anime.favorited_by?(current_user) %>
    <p>
      <%= link_to anime_likes_path(@anime), method: :delete do %>
        ♥<%= @anime.likes.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to anime_likes_path(@anime), method: :post do %>
        ♡<%= @anime.likes.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>

<div class="comments">
<p>コメント件数：<%= @anime.post_comments.count %></p>
<% @anime.post_comments.each do |post_comment| %>
  <p><%#= image_tag('142_refileDownloadImage.png') %></p>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% if post_comment.user == current_user %>
    <div class="comment-delete">
      <%= link_to "削除",  anime_post_comment_path(post_comment.anime, post_comment), method: :delete %>
    </div>
  <% end %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@anime, @post_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'1',placeholder: "コメントをここに" %></br>
  <%= f.submit "送信する" %></br>
<% end %>
</div>
