<% if user_signed_in? %>
  <% if @anime.liked_by?(current_user) %>
    <p>
      <%= link_to anime_likes_path(@anime), method: :delete, remote: true do %>
        <i class="fas fa-heart unlike-btn"></i>
      <% end %>
      <%= @anime.likes.count %>
    </p>
    <% else %>
    <p>
      <%= link_to anime_likes_path(@anime), method: :post, remote: true do %>
        <i class="fas fa-heart like-btn"></i>
      <% end %>
      <%= @anime.likes.count %>
    </p>
  <% end %>
<% else %>
  <p><i class="fas fa-heart like-btn"></i><%= anime.likes.count %></p>
<% end %>