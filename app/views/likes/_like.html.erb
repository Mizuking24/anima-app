<% if user_signed_in? %>
  <% if @anime.liked_by?(current_user) %>
    <p>
      <%= link_to anime_likes_path(@anime), method: :delete, remote: true do %>
        ♥<%= @anime.likes.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to anime_likes_path(@anime), method: :post, remote: true do %>
        ♡<%= @anime.likes.count %> いいね
      <% end %>
    </p>
  <% end %>
<% else %>
  <p><%= anime.likes.count %>いいね</p>
<% end %>