<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <table class="table">
        <h2>Follow Users</h2>
        <% if @users.exists? %>
          <thead>
            <tr>
              <th>name</th>
              <th></th>
              <th></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :icon, :fill, 70, 70, fallback: "no_image.jpg", class:"rounded-circle icon_image mr-3 mb-3" %></td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.followings.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td><%= link_to "show", user_path(user), class:"btn btn-primary" %></td>
              </tr>
              <% end %>
          </tbody>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </table>
    </div>
  </div>
</div>