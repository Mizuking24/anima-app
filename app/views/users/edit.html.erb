<h3>ユーザー編集画面</h3>
<%= form_with model: @user, local: true do |f| %>
<%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.jpg"%></br>
<%= f.label :"アイコン画像" %></br>
<%= f.attachment_field :icon %></br>
<%= f.label :"名前" %></br>
<%= f.text_field :name, autofocus: true %></br>
<%= f.label :"自己紹介" %></br>
<%= f.text_area :introduction, autofocus: true %></br>
<%= f.submit "変更を保存" %></br>
<% end %>