<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ユーザー編集画面</h5>
      <div class="form-body p-4">
        <%= form_with model: @user, local: true do |f| %>
          <%= attachment_image_tag @user, :icon, :fill, 60, 60, fallback: "no_image.jpg", class:"rounded-circle icon_image mr-3 mb-3" %>
          <%= f.attachment_field :icon %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control" %>
          </div>
          <%= f.text_area :introduction, autofocus: true, class:"form-control", rows:"3" %>
          <hr>
          <%= f.submit '変更を保存', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>