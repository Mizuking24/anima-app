<% if current_user == @user %>
  <h3>マイページ</h3>
<% else %>
  <h3><%= @user.name %>さんのページ</h3>
<% end %>

<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= attachment_image_tag @user, :icon, :fill, 100, 100, fallback: "no_image.jpg" %></br>
  <%= link_to "#{@user.followings.count}フォロー中", user_followings_path(@user) %>
  <%= link_to "#{@user.followers.count}フォロワー", user_followers_path(@user)%>
</div>

<% if current_user != @user %>
  <%= render 'relationships/follow_button', user: @user %>
<% end %>

<% if @user.id == current_user.id %>
  <%= link_to "プロフィール編集", edit_user_path(@user) %>
<% end %>

<% @animes.each do |anime| %>
<div>
  <%= link_to anime_path(anime) do %>
    <%= attachment_image_tag anime, :image, :fill, 500, 500, fallback: "142_refileDownloadImage.png" %>
  <% end %>
  <p>タイトル：<%= anime.title %></p>
  <!--星評価-->
   <div id="star-rate-<%= anime.id %>"></div>
    <script>
    $('#star-rate-<%= anime.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      half: true,
      readOnly: true,
      score: <%= anime.rate %>,
    });
    </script>
  <!--/星評価-->
  <p>感想：<%= anime.body %></p>
  <p>ユーザーネーム：<%= anime.user.name %></p>
  <p><%= link_to "#{anime.post_comments.count} コメント", anime_path(anime.id) %></p>
  <P><%= "#{anime.likes.count}いいね" %></P>
</div>
<% end %>