<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="col-md-8 offset-md-9">
        <%= link_to "ユーザー検索", search_users_path, class:"btn btn-success" %>
      </div>
      <table class="table">
      <h2>Users</h2>
        <thead>
          <tr>
            <th>icon</th>
            <th>name</th>
            <th>introduction</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :icon, :fill, 70, 70, fallback: "no_image.jpg", class:"rounded-circle icon_image mr-3 mb-3" %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
              <td><%= link_to "show", user_path(user), class:"btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>